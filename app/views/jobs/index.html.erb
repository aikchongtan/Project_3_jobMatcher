<div class="container">

    </br>
        <div style= 'text-align: center'><h2>Available jobs @ Gig-Link</h2></div>

        <div class="div-center-button">
        <a class="btn btn-warning btn-lg" href="" role="button"><strong>POST A NEW JOB</strong></a>
                    <%= link_to 'Post a new job', jobs_post_path(@job_posting) %>
        </div>

<div class="row">
        <div class="col-2"></div>
    <div class="col-8">

    <% @job_posting.each do |job_post| %>

    <div class="card">
  <h5 class="card-header"> Required role: <%= job_post.job_category.name %> </h5>

  <div class="card-body">
    <h3 class="card-title"> <strong> <%= job_post.job_post_title %> </strong> </h3>

        <p class="card-text"> <%= job_post.job_description %> </p>

        <p class="card-text"> Expertise details here</p>


        <p class="card-text"> <strong>Project timeline:</strong> <%= job_post.project_timeline.name %> </p>
        <p class="card-text"> <strong> Project Type:</strong> <%= job_post.project_type.name %> </p>
        <p class="card-text"> <strong>Preferred Experience level:</strong> <%= job_post.experience_level_hourly_rate.name %> </p>
        <p class="card-text"> <strong>Hourly Rate:</strong> <%= job_post.experience_level_hourly_rate.hourly_rates %> </p>

            <a href="#" class="btn btn-success"><strong>Apply for job</strong></a>
            <a href="#" class="btn btn-info"><strong>More info</strong></a>
            <a href="#" class="btn btn-danger"><strong>Save job</strong></a>
  </div>
    </div>
        <% end %>

    </div>
    </div>

    <div class="col-2"></div>
    </div>

   </div>

