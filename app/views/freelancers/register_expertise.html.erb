<h1>Create Freelance</h1>
<h3>Register Expertise</h3>

<%= form_with scope: :freelancer, url: freelancer_create_expertise_path, local: true do |form| %>
  <p>
    <%= form.label :'What is your main service offering to client?' %><br>
    <%= form.collection_select :job_category_id, @job_categories, :id, :name %>
  </p>

  <p>
    <%= form.label :'What is your experience level?' %><br>
    <%= form.collection_radio_buttons :experience_level_hourly_rate_id, @experience_levels, :id, :name %>
  </p>

  <p>
    <%= form.submit value="Next"%>
  </p>
<% end %>

